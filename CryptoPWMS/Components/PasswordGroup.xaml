<UserControl x:Class="CryptoPWMS.Components.PasswordGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoPWMS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ExpandCollapse" Style="{StaticResource transparent}" Margin="2" Click="ExpandCollapse_Click">
            <Image Source="pack://application:,,,/img/folder.png" Height="22"></Image>
        </Button>

        <Button x:Name="AddNew" Style="{StaticResource transparent}" Margin="2,0,20,0" Click="ExpandCollapse_Click" Grid.Column="2" HorizontalAlignment="Right">
            <Image Source="pack://application:,,,/img/add_solid.png" Height="22"></Image>
        </Button>

        <TextBlock x:Name="txtTitle" Foreground="{StaticResource txt_gr}" FontWeight="DemiBold" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0">Password Group Title</TextBlock>

        <Grid x:Name="SubGrid" Grid.Row="1" Grid.ColumnSpan="123" Visibility="Collapsed">
            <GridSplitter x:Name="vert_connector" IsEnabled="False" Width="0.8" Foreground="DarkGray" HorizontalAlignment="Left" Margin="17.4,0,0,30"></GridSplitter>

            <StackPanel x:Name="pw_stack" Orientation="Vertical" Grid.Row="1" Margin="17.5,10,20,0"></StackPanel>
            
        </Grid>
    </Grid>
</UserControl>
